@using BurgerQueen.UI.Models.VM.ApplicationUserVM
@model LoginWith2faVM

@{
    ViewData["Title"] = "İki Faktörlü Doğrulama";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <p>İki faktörlü doğrulamayı tamamlamak için kimlik doğrulama uygulamanızdan aldığınız kodu girin.</p>
                    <form asp-action="LoginWith2fa" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="TwoFactorCode">Doğrulama Kodu</label>
                            <input asp-for="TwoFactorCode" class="form-control" autocomplete="off" />
                            <span asp-validation-for="TwoFactorCode" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Bu cihazı hatırla</label>
                        </div>
                        <input type="hidden" asp-for="ReturnUrl" />
                        <button type="submit" class="btn btn-primary">Doğrula</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}