@using BurgerQueen.UI.Models.VM.ApplicationUserVM
@model DeleteAccountVM

@{
    ViewData["Title"] = "Hesabı Sil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <p>Hesabınızı silmek istediğinizden emin misiniz, <strong>@Model.Email</strong>? Bu işlem geri alınamaz.</p>
                    <form asp-action="DeleteAccount" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Password">Şifrenizi Girin</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-danger">Hesabı Sil</button>
                        <a asp-action="Profile" class="btn btn-secondary">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}