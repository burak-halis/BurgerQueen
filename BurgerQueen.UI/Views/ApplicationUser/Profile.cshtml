@using BurgerQueen.UI.Models.VM.ApplicationUserVM
@model ProfileVM

@{
    ViewData["Title"] = "Profil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>@Model.FirstName @Model.LastName</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.UserName</h5>
                    <p class="card-text"><strong>Email:</strong> @Model.Email</p>
                    <p class="card-text"><strong>Kullanıcı ID:</strong> @Model.Id</p>
                    <div class="text-center">
                        <a asp-action="EditProfile" asp-route-id="@Model.Id" class="btn btn-primary">Profili Düzenle</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="DeleteUser" asp-route-id="@Model.Id" class="btn btn-danger">Kullanıcıyı Sil</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>