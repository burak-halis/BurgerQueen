@using BurgerQueen.UI.Models.VM.ApplicationUserVM
@model ProfileVM

@{
    ViewData["Title"] = "Profil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                            {
                                <img src="@Url.Content("~/" + Model.ProfilePictureUrl)" alt="Profil Resmi" class="img-fluid rounded-circle mb-3" style="max-width: 150px;" />
                            }
                            else
                            {
                                <p>Profil resmi bulunamadı.</p>
                            }
                        </div>
                        <div class="col-md-8">
                            <h5>@Model.FirstName @Model.LastName</h5>
                            <p><strong>Kullanıcı Adı:</strong> @Model.UserName</p>
                            <p><strong>E-posta:</strong> @Model.Email</p>
                            @if (!string.IsNullOrEmpty(Model.Address))
                            {
                                <p><strong>Adres:</strong> @Model.Address</p>
                            }
                            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                            {
                                <p><strong>Telefon:</strong> @Model.PhoneNumber</p>
                            }
                            @if (Model.DateOfBirth.HasValue)
                            {
                                <p><strong>Doğum Tarihi:</strong> @Model.DateOfBirth.Value.ToString("d")</p>
                            }
                            @if (Model.Gender.HasValue)
                            {
                                <p><strong>Cinsiyet:</strong> @Html.DisplayFor(model => Model.Gender)</p>
                            }
                        </div>
                    </div>
                    <div class="mt-4">
                        <a asp-action="EditProfile" class="btn btn-primary">Profili Düzenle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>