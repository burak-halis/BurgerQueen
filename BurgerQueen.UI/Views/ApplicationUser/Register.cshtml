@using BurgerQueen.Shared.Enums
@using BurgerQueen.UI.Models.VM.ApplicationUserVM

@model RegisterVM

@{
    ViewData["Title"] = "Kayıt Ol";
    DateTime minDate = DateTime.Now.AddYears(-18);
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <input asp-for="Email" class="form-control" placeholder="E-posta" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <input asp-for="Password" class="form-control" type="password" placeholder="Şifre" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Şifreyi Onayla" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()">
                                <option value="">Cinsiyet</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <input asp-for="FirstName" class="form-control" placeholder="Ad" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <input asp-for="LastName" class="form-control" placeholder="Soyad" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <input asp-for="Address" class="form-control" placeholder="Adres" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="Doğum Tarihi" max="@DateTime.Now.ToString("yyyy-MM-dd")" min="@minDate.ToString("yyyy-MM-dd")" value="@minDate.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}