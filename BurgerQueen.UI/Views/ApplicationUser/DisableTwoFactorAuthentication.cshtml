@using BurgerQueen.UI.Models.VM.ApplicationUserVM
@model Disable2faVM

@{
    ViewData["Title"] = "İki Faktörlü Doğrulama Devre Dışı Bırakma";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        İki faktörlü doğrulamayı devre dışı bırakmak için lütfen doğrulama kodunu girin:
                    </p>
                    <form asp-action="DisableTwoFactorAuthentication" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" asp-for="ConfirmDisable" id="confirmDisable" />
                            <label class="form-check-label" asp-for="ConfirmDisable">
                                Evet, iki faktörlü doğrulamayı devre dışı bırakmak istiyorum.
                            </label>
                        </div>
                        <div class="form-group">
                            <label asp-for="TwoFactorCode">Doğrulama Kodu:</label>
                            <input type="text" class="form-control" asp-for="TwoFactorCode" placeholder="Doğrulama kodunu girin" required>
                            <span asp-validation-for="TwoFactorCode" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger btn-block">Devre Dışı Bırak</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}