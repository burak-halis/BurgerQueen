@using BurgerQueen.UI.Models.VM.ApplicationUserVM
@model Enable2faVM

@{
    ViewData["Title"] = "İki Faktörlü Doğrulama Aktifleştirme";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div>
    <h4>İki Faktörlü Doğrulama Kurulumu</h4>
    <p>
        Lütfen aşağıdaki adımları takip edin:
    </p>
    <ol>
        <li>
            <strong>Authenticator Uygulamasını İndirin:</strong> Google Authenticator, Microsoft Authenticator veya benzeri bir uygulama kullanabilirsiniz.
        </li>
        <li>
            <strong>QR Kodu Tarayın veya Anahtarı Manuel Girin:</strong>
            <div>
                <img src="@Model.AuthenticatorUri" alt="QR Kod" />
                <p>Veya manuel olarak anahtarı girin: <code>@Model.SharedKey</code></p>
            </div>
        </li>
        <li>
            <strong>Doğrulama Kodu Girin:</strong>
            <form asp-action="EnableTwoFactorAuthentication" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">2FA'yı Aktifleştir</button>
            </form>
        </li>
    </ol>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}  <!-- Burası kapatıldı -->