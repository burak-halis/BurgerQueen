@model Enable2faViewModel
@{
    ViewData["Title"] = "İki Faktörlü Doğrulama Aktifleştir";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <p>Authenticator uygulamasını indirin ve aşağıdaki QR kodunu tarayın:</p>
                <img src="@Model.AuthenticatorUri" alt="QR Code" />
                <p>Veya manuel olarak anahtarı girin: <code>@Model.SharedKey</code></p>
            </div>
            <div class="form-group">
                <label asp-for="Code"></label>
                <input asp-for="Code" class="form-control" autocomplete="off" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Aktifleştir</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}