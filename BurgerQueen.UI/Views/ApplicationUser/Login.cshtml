@model LoginVM

@{
    ViewData["Title"] = "Giriş Yap";
    ViewData["ReturnUrl"] = ViewData["ReturnUrl"] ?? "/";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">E-posta Adresi veya Kullanıcı Adı</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Şifre</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label asp-for="RememberMe" class="form-check-label">
                    <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
        </form>

        <div class="mt-3">
            <a asp-action="ForgotPassword">Şifremi Unuttum</a>
        </div>
        <div>
            <p>
                Hesabınız yok mu? <a asp-action="Register">Kayıt Ol</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}