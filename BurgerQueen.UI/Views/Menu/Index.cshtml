@model IEnumerable<BurgerQueen.UI.Models.VM.MenuVM.MenuListVM>

@{
    ViewData["Title"] = "Menü Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4">Menüler</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Menü Ekle</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@item.ImagePath" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text"><strong>Toplam Fiyat:</strong> @item.TotalPrice TL</p>
                    @if (item.Discount.HasValue)
                    {
                        <p class="card-text"><strong>İndirim:</strong> @item.Discount.Value TL</p>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Detaylar</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Sil</a>
                    <a asp-action="GetMenuItems" asp-route-menuId="@item.Id" class="btn btn-outline-secondary btn-sm">Menü Öğeleri</a>
                </div>
            </div>
        </div>
    }
</div>