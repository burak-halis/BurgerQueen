@model BurgerQueen.UI.Models.VM.PromotionVM.PromotionListVM

@{
    ViewData["Title"] = "Promosyon Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.Name Sil</h1>

<h3>Bu promosyona silmek istediğinize emin misiniz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Ad:</dt>
        <dd class="col-sm-9">@Model.Name</dd>
        <dt class="col-sm-3">Başlangıç Tarihi:</dt>
        <dd class="col-sm-9">@Model.StartDate.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-3">Bitiş Tarihi:</dt>
        <dd class="col-sm-9">@(Model.EndDate?.ToString("dd/MM/yyyy") ?? "Süresiz")</dd>
        <dt class="col-sm-3">İndirim Oranı:</dt>
        <dd class="col-sm-9">@Model.DiscountPercentage%</dd>
        <dt class="col-sm-3">Aktif:</dt>
        <dd class="col-sm-9">@(Model.IsActive ? "Evet" : "Hayır")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Dön</a>
    </form>
</div>